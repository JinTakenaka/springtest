<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.TodoMapper">

    <select id="find" resultType="TodoModel">
        SELECT
            id,
            title
        FROM
            todo
    </select>

    <select id="insert">
        INSERT INTO
            todo (title)
        VALUES (
            #{title}
        )
    </select>

    <select id="update">
        UPDATE
            todo
        SET
            title=#{title}
        WHERE
            id=#{id}
    </select>

    <select id="delete">
        DELETE
        FROM
            todo
        WHERE
            id=#{id}
    </select>

    <select id="deleteAll">
        DELETE
        FROM
            todo
    </select>

</mapper>